<% layout("/layouts/boilerplate") %>
     <style>
          #filters{
               display: flex;
               flex-wrap: wrap;
               align-items: center;
          }
          .filter{
               text-align: center;
               margin-right: 2rem;
               margin-top: 1rem;
               opacity: 0.5;
               font-weight: 600;
          }
          .filter:hover{
               opacity: 1;
               cursor: pointer;
          }
          .filter i{
               font-size: 1.4rem;
          }
          a{
               text-decoration: none;
               color: black;
          }
          .tax-info{
               display: none;
          }
          .tax-toggle{
               border: 1.5px solid black;
               border-radius: 1rem;
               padding: 0.7rem;
               margin-left: 4rem;
          }
     </style>


     <div id="filters">
          <a href="/listings/tranding">
               <div class="filter">
                    <div><i class="fa-solid fa-fire "></i></div>
                    <p>Tranding</p>
               </div>
          </a>

          <a href="/listings/rooms">
               <div class="filter">
                    <div><i class="fa-solid fa-bed "></i></div>
                    <p>Rooms</p>
               </div>
          </a>

          <a href="/listings/iconicCity">
               <div class="filter">
                    <div><i class="fa-solid fa-mountain-city "></i></div>
                    <p>Iconic Cities</p>
               </div>
          </a>

          <a href="/listings/mountains">
               <div class="filter">
                    <div><i class="fa-solid fa-mountain-sun "></i></div>
                    <p>Mountains</p>
               </div>
          </a>


          <a href="/listings/castles">
               <div class="filter">
                    <div><i class="fa-brands fa-fort-awesome "></i></div>
                    <p>Castles</p>
               </div>
          </a>

          <a href="/listings/pools">
               <div class="filter">
                    <div><i class="fa-solid fa-person-swimming "></i></i></div>
                    <p>Amazing pools</p>
               </div>
          </a>

          <a href="/listings/camping">
               <div class="filter">
                    <div><i class="fa-solid fa-campground "></i></div>
                    <p>Camping</p>
               </div>
          </a>

          <a href="/listings/farms">
               <div class="filter">
                    <div><i class="fa-solid fa-tractor "></i></div>
                    <p>Farms</p>
               </div>
          </a>

          <a href="/listings/beach">
               <div class="filter">
                    <div><i class="fa-solid fa-umbrella-beach "></i></div>
                    <p>Beach</p>
               </div>
          </a>
          <div class="tax-toggle">
               <div class="form-check-reverse form-switch">
                    <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
                    <label class="form-check-label" for="flexSwitchCheckDefault">Display Total After Taxes</label>
                  </div>
          </div>

     </div>

     <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
          <% for(let listing of allListings){%>
               <a href="/listings/<%=listing._id %>" class="listing-link">
                    <div class="card col listing-card">
                         <img src="<%=listing.image.url%>" class="card-img-top" alt="listing_image" style=" height: 20rem;">
                         <div class="card-img-overlay"></div>
                         <div class="card-body">
                              <p class="card-text">
                              
                                   <b>
                                        <%=listing.title%>
                                   </b> <br>
                                   &#8377; <%=listing.price.toLocaleString('en-IN')%>/Night
                                   &nbsp;<i class="tax-info"> +18% GST</i>
                              
                              </p>
                         </div>
                    </div>
               </a>
          <% }%>
     </div>
     <script>
          let texSwich = document.getElementById("flexSwitchCheckDefault");
          texSwich.addEventListener("click" , ()=>{
               let taxInfo = document.getElementsByClassName("tax-info")
               for(info of taxInfo){
                    if(info.style.display != "inline"){
                         info.style.display = "inline";
                    }else{
                         info.style.display = "none";
                    }
                    
               }
          })
     </script>